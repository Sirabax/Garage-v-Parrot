{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block contentcss %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/stylesheets/loginstyle.css') }}">
{% endblock %}

{% block content %}
<div class="login-form">
    <h2>Connexion</h2>
    
    {# Display login error if available #}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form action="{{ path('app_login_check') }}" method="post">
        <div class="form-group">
            <label for="email">Email :</label>
            <input type="text" id="email" name="_username" value="{{ last_username }}" required>
        </div>
        <div class="form-group">
            <label for="password">Mot de passe :</label>
            <input type="password" id="password" name="_password" required>
        </div>
        <div class="form-group">
            <input type="submit" value="Se connecter">
        </div>
    </form>
</div>
{% endblock %}