{% extends 'base.html.twig' %}


{% block contentcss %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        {% for row in voitures %}
            <div class="col-3">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="https://picsum.photos/400/200" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ row.marque }} - {{ row.modele }}</h5>
                        <p class="card-text"><b>Prix: {{ row.prix }}</b></p>
                        <p class="card-text"><b>Ann√©e: {{ row.annee }}</b></p>
                        <p class="card-text"><b>Kilometrage: {{ row.kilometrage }}</b></p>
                        <p class="card-text"><b>couleur: {{ row.couleur }}</b></p>
                        <a href="#" class="btn btn-secondary">Go somewhere</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}